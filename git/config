[include]
  path = ~/.config/git/catppuccin.gitconfig

[user]
  email = git@calvinludwig.xyz
  name = Calvin Ludwig

[core]
  pager = delta
  compression = 9
  editor = nvim
  preloadindex = true
  whitespace = error

[fetch]
  prune = true

[pull]
  default = current
  rebase = true

[rebase]
  autostash = true

[init]
  defaultBranch = main

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[interactive]
  diffFilter = delta --color-only
  singlekey = true

[delta]
  side-by-side = true
  line-numbers = true
  features = catppuccin-macchiato
  navigate = true

[merge]
  conflictstyle = zdiff3

[color]
  ui = true

[alias]
  cm = commit
  ck = checkout
  st = status --short
  dif = diff --word-diff
  lol = log --oneline --graph
  bb = !/home/ludwig/.config/git/better-git-branch.sh

[advice]
  addEmptyPathspec = false
  pushNonFastForward = false
  statusHints = false

[commit]
  gpgsign = false
  template = ~/.config/git/template

[push]
  autoSetupRemote = true
  default = current
  followTags = true

[log]
  abbrevCommit = true  # short commits
  graphColors = blue,yellow,cyan,magenta,green,red

[blame]
  coloring = highlightRecent
  date = relative
