[include]
  path = ~/.config/git/catppuccin.gitconfig
[user]
  name = Calvin Ludwig
  email = git@calvinludwig.xyz

[fetch]
  prune = true

[pull]
  rebase = true

[init]
	defaultBranch = main

[core]
  pager = delta
  editor = nvim

[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-latte
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  line-numbers = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[alias]
  cm = commit
  ck = checkout
  st = status --short
  df = diff -w
  lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[advice]
	addEmptyPathspec = false
