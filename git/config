[include]
  path = ~/.config/git/catppuccin.gitconfig

[user]
  name = Calvin Ludwig
  email = git@calvinludwig.xyz

[fetch]
  prune = true

[pull]
  rebase = true

[init]
  efaultBranch = main

[core]
  pager = delta
  editor = nvim

[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-latte
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  line-numbers = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[alias]
  cm = commit
  ck = checkout
  st = status --short
  dif = diff --word-diff
  lol = log --oneline --graph
  bb = !/home/ludwig/.config/git/better-git-branch.sh

[advice]
  addEmptyPathspec = false

[commit]
  gpgsign = false

[push]
  autoSetupRemote = true
